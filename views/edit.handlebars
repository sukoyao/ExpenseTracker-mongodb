<div class="container">
  <div class="row text-center mt-5 mx-auto"
    style="background:linen; border: 2px solid black; border-radius: 12px; width: 350px; height:480px">
    <div class="col-auto m-auto">
      <p class="mt-5">*必填欄位</p>
      <h2 class="ml-5 text-center">請輸入你的支出</h2>
      <form action="/records/{{record.id}}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name" class="mr-4">
            <h3>名稱* :</h3>
          </label>
          <input type="text" class="mt-4" placeholder="name" id="name" name="name" value="{{record.name}}"
            style="width: 170px;">
        </div>

        <div class="form-group">
          <label for="date" class="mr-4">
            <h3>日期* :</h3>
          </label>
          <input type="date" class="mt-4" style="width: 170px;height: 35px;" id="date" name="date"
            value="{{record.date}}">
        </div>

        <div class="form-group">
          <label for="category" class="mr-4">
            <h3>類別* :</h3>
          </label>
          <select class="select mt-4" style="width: 170px; height: 30px" name="category" id="category" required>
            <option value="">{{record.category}}</option>
            <option value="home">家居物業</option>
            <option value="travel">交通出行</option>
            <option value="leisure">休閒娛樂</option>
            <option value="food">餐飲食品 </option>
            <option value="other">其他</option>
          </select>
        </div>

        <div class="form-group">
          <label for="amount" class="mr-4">
            <h3>金額* :</h3>
          </label>
          <input type="text" class="mt-4" placeholder="amount" id="amount" name="amount" value="{{record.amount}}"
            style="width: 170px;">
        </div>

        <button type=" submit" class="mt-3 mb-4" style="width: 160px">送出</button>
      </form>
    </div>
  </div>
</div>
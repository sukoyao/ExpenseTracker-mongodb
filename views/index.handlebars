<div class="overlay"></div>
<div class="container-fluid">
  <div class="row mt-5 justify-content-center">

    <div class="dropdown mr-4">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownButton" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false" style="width: 150px;">
        月份
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownButton">
        <a class="dropdown-item" href="/filter/month/01">1月</a>
        <a class="dropdown-item" href="/filter/month/02">2月</a>
        <a class="dropdown-item" href="/filter/month/03">3月</a>
        <a class="dropdown-item" href="/filter/month/04">4月</a>
        <a class="dropdown-item" href="/filter/month/05">5月</a>
        <a class="dropdown-item" href="/filter/month/06">6月</a>
        <a class="dropdown-item" href="/filter/month/07">7月</a>
        <a class="dropdown-item" href="/filter/month/08">8月</a>
        <a class="dropdown-item" href="/filter/month/09">9月</a>
        <a class="dropdown-item" href="/filter/month/10">10月</a>
        <a class="dropdown-item" href="/filter/month/11">11月</a>
        <a class="dropdown-item" href="/filter/month/12">12月</a>
      </div>
    </div>

    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownButton" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false" style="width: 150px">
        類別
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownButton">
        <a class="dropdown-item" href="/filter/category/home">家居物業</a>
        <a class="dropdown-item" href="/filter/category/travel">交通出行</a>
        <a class="dropdown-item" href="/filter/category/leisure">休閒娛樂</a>
        <a class="dropdown-item" href="/filter/category/food">餐飲食品</a>
        <a class="dropdown-item" href="/filter/category/other">其他</a>
      </div>
    </div>
  </div>

  <div class="row mx-auto my-1"
    style="background:lightgray; border: 2px solid black; border-radius: 12px; width: 320px; height:120px;">
    <div class="col-5 mt-3">
      <h4 for="name">總金額:</h4>
    </div>
    <div class="col-5">
      <h1 class="mt-5 mr-1" style="color:tomato; width: 500px; height: 80px;">
        <strong>{{totalAmount}}</strong>
      </h1>
    </div>
  </div>

  <div class="col mx-auto" style="display: flex; flex-flow: row wrap; justify-content: space-around;">
    <a href="/records/new" class="btn btn-primary my-3"
      style="background-color:tomato; width: 320px; height: 45px; border: 2px #000 solid;">新增支出</a>
  </div>

  <ul class="list-group mb-3">
    {{#each records}}
    <li class="list-group-item" style="background-color:linen;">
      <div class="row align-items-center">
        <div class="col-2 ml-1">
          {{#switch this.category}}
          {{#case 'home'}} <i class="fas fa-home fa-3x" style="color: teal"></i>{{/case}}
          {{#case 'travel'}} <i class="fas fa-shuttle-van fa-3x" style="color:crimson"></i>{{/case}}
          {{#case 'leisure'}} <i class="fas fa-grin-beam fa-3x" style="color:purple"></i>{{/case}}
          {{#case 'food'}} <i class="fas fa-utensils fa-3x" style="color:olivedrab"></i>{{/case}}
          {{#case 'other'}} <i class="fas fa-pen fa-3x" style="color:deeppink"></i>{{/case}}
          {{/switch}}
        </div>

        <div class="col-mb-2" style="width: 155px">
          <p class="lead mb-0">{{this.name}}</p>

          <i>{{this.date}}</i>
        </div>
        <h3><strong class="mx-5">{{this.amount}}</strong></h3>

        <div class="row my-2 mx-auto" style="display: inherit;">
          <div class="col-2 mx-auto d-flex justify-content-around">
            <form action="/records/{{this.id}}/edit">
              <button type="submit" class="btn btn-success mr-2 mb-2 d-inline" style="width: 120px;">
                <i class="far fa-edit"></i>修改</button>
            </form>
          </div>
          <div class="col-2 mx-auto d-flex justify-content-around">
            <form action="/records/{{this.id}}/delete?_method=DELETE" method="POST" class="">
              <button type="submit" class="btn btn-danger mb-2 d-inline" style="width: 120px;">
                <i class="far fa-trash-alt"></i>
                刪除</button>
            </form>
          </div>
        </div>
      </div>
    </li>
    {{/each}}
  </ul>
</div>